<% include ../partials/header %>
<h1 style="text-align: center; padding-top: 40px;">Create New World Wonder</h1>

<div class="row">
  <div style="width: 30%; margin: 25px auto;">
    <form action="/campgrounds" method="POST">
      <div class="form-group">
        <label for="name">Name</label>
        <input
          class="form-control"
          type="text"
          name="name"
          id="name"
          placeholder="Great Wall"
        />
      </div>
      <div class="form-group">
        <label for="image">Image Url</label>
        <input
          class="form-control"
          type="text"
          name="image"
          id="image"
          placeholder="https://i.imgur.com/bYvQg.jpg"
          required
        />
        <small
          >Click <a href="https://imgur.com/a/Kl3jc">Here</a> to Choose A World
          Wonder
        </small>
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <input
          class="form-control"
          type="text"
          name="description"
          id="description"
          placeholder="We live only to discover beauty. All else is a form of waiting."
        />
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
      </div>
    </form>
    <a href="/campgrounds">Go Back</a>
  </div>
</div>

<% include ../partials/footer %>
